{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "input": {
    "maxFileSize": 52428800
  },
  "output": {
    "filePath": "docs/repomix.md",
    "style": "markdown",
    "parsableStyle": true,
    "fileSummary": false,
    "directoryStructure": true,
    "files": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "compress": false,
    // "compress": true,
    "topFilesLength": 5,
    "showLineNumbers": false,
    "copyToClipboard": true,
    "git": {
      "sortByChanges": true,
      "sortByChangesMaxCommits": 100,
      "includeDiffs": false
    }
  },
  "include": [
    "package.json",
    "eslint.config.js",
    "tsconfig.json",
    "index.tsx",
    // "src"
    "src/stores/review.store.ts",
    "src/hooks/useReviewScreen.tsx",
    "src/constants/review.constants.ts",
    "src/App.tsx",
    "src/hooks/useDebugMenu.tsx",
    "src/stores/app.store.ts",
    "src/services/review.service.ts",
    "src/components/ReviewProcessingScreen.tsx",
    "src/hooks/useGlobalHotkeys.tsx",
    "index.tsx",
    "src/types/domain.types.ts",
    "src/types/view.types.ts",
    "src/types/actions.types.ts",
    "src/stores/settings.store.ts",
    "src/constants/settings.constants.ts",
    "src/hooks/useSettingsScreen.tsx",
    "src/components/SettingsScreen.tsx",
    "src/services/ai.service.ts",
    "src/hooks/useAiProcessingScreen.tsx",
    "src/components/AiProcessingScreen.tsx",
    "src/hooks/useReviewProcessingScreen.tsx"

    // "docs/relaycode-tui/splash-screen.readme.md",
    // "docs/relaycode-tui/initialization-screen.readme.md"
    // "docs/relaycode-tui/dashboard-screen.readme.md"
    // "docs/relaycode-tui/global-help-screen.readme.md"

    // "docs/relaycode-tui/review-screen.readme.md",
    // "docs/relaycode-tui/diff-screen.readme.md",
    // "docs/relaycode-tui/reason-screen.readme.md",
    // "docs/relaycode-tui/review-screen.readme.md",
    // "docs/relaycode-tui/review-processing-screen.readme.md"
    // "docs/relaycode-tui/reason-screen.readme.md"
    // "docs/relaycode-tui/git-commit-screen.readme.md",
    // "docs/relaycode-tui/transaction-detail-screen.readme.md",
    // "docs/relaycode-tui/transaction-history-screen.readme.md"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      // "src/components"
      // "src/components/GlobalHelpScreen.tsx",
      // "src/components/DashboardScreen.tsx",
      // "src/components/InitializationScreen.tsx",
      // "src/components/SplashScreen.tsx",
      // "src/components/TransactionHistoryScreen.tsx",
      // "src/components/GitCommitScreen.tsx"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}
